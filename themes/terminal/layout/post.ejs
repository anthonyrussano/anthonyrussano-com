<div class="post-container">
    <div class="post-header">
        <span class="ui-tips"><%- __('common.title') + __('symbol.colon')%></span>
        <h1 class="ui-keyword post-title"><%- page.title || '(empty)' %></h1>
    </div>
    <% if (page.categories && page.categories.length) { %>
    <div class="post-header">
        <span class="ui-tips"><%- __('common.category') + __('symbol.colon')%></span>
        <% page.categories.forEach(category => { %>
        <a href="<%= url_for(category.path) %>"><%= category.name %></a>
        <% }) %>
    </div>
    <% } %>
    <% if (page.tags && page.tags.length) { %>
    <div class="post-header">
        <span class="ui-tips"><%- __('Tags') + __('symbol.colon')%></span>
        <% page.tags.forEach(tag => { %>
        <a href="<%= url_for(tag.path) %>"><%= tag.name %></a>
        <% }) %>
    </div>
    <% } %>
    <div class="post-header">
    <span class="ui-tips"><%- __('Git') + __('symbol.colon')%></span>
    <% if (theme.history_control.enable) {
    let file_path = `${theme.history_control.branch}/source/${page.source}`;%>
    <a href='<%= theme.history_control.server_link %><%= theme.history_control.user %>/<%= theme.history_control.repertory %><%= `/raw/${file_path}` %>'> Source </a>
    <a href='<%= theme.history_control.server_link %><%= theme.history_control.user %>/<%= theme.history_control.repertory %><%= `/edit/${file_path}` %>'> Edit </a>
    <a href='<%= theme.history_control.server_link %><%= theme.history_control.user %>/<%= theme.history_control.repertory %><%= `/commits/${file_path}` %>'> History </a>
    <% } %>
    </div>
    <% if (page.photos && page.photos.length) { %>
    <div class="post-content">
        <% page.photos.forEach(photo => { %>
        <img src="<%= photo %>" alt="photo" />
        <% }) %>
    </div>
    <% } %>
    <div class="post-content"><%- page.content %></div>
</div>
